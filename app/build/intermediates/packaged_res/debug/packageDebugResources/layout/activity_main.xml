<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:entries="@array/categorias"/>

        <Button
            android:id="@+id/btnExplorar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerCategoria"
            android:layout_alignRight="@+id/btnFavoritos"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/explorar"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnExplorar"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/fav"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnRecomendaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recomendaciones"
            android:layout_below="@+id/btnFavoritos"
            android:layout_alignLeft="@+id/btnExplorar"
            android:layout_alignRight="@+id/btnFavoritos"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>