<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/descripcion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Descripcion">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/texViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="texViewNombre"/>

        <TextView
            android:id="@+id/texViewPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/texViewNombre"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="texViewPais"/>

        <TextView
            android:id="@+id/textViewCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/texViewPais"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="textViewCategoria" />

        <TextView
            android:id="@+id/textViewPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCategoria"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="textViewPlan" />

        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPlan"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="textViewPrecio" />

        <!-- Nuevo TextView para el clima -->
        <TextView
            android:id="@+id/textViewClima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPrecio"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Clima: NA" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnFavoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="@string/btnFav">

    </Button>

</RelativeLayout>
